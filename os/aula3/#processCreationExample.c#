#include <unistd.h>
#include <stdio.h>

int main() {

  pid_t pid;
  int a=0, b=0, c=0;
  
  if((pid = fork()) < 0) {
    /*fork failed */

  }
  else if (pid == 0) {
    a++;
    exit(1);
  }
  else
    b++;
  a++; b++; c++;
  printf("pid: %d, a: %d, b: %d, c: %d\n", getpid(), a, b, c);
  return 0;
}
